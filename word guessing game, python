name = print("Enter your name: ")
name= input()
word= 'scale'
print("Hello", name, "\nWelcome to the game.\nYou need to guess the secret word.\nWord contains", len(word),"letters.\nIt starts with", word[0], "and ends with", word[len(word)-1],"\nYou have 5 chances to guess the SECRET WORD"  )

turn= 5

wordlist= []
print("Guess the word: ")
while turn>0 :

    guessed= input()
    if guessed == word:
        print("You won", name)
        break
    else:
        wordlist.append(guessed)
        if turn-1!=0:
            print("No, that is wrong. You have",turn-1,"chances left")
            print("Guess word")
        turn= turn -1
if turn == 0:
    print("You lost,", name)
    print("All words you entered", wordlist)
